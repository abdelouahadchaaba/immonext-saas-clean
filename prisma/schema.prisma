generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// Rôle d’un utilisateur dans la plateforme
enum UserRole {
  SUPER_ADMIN   // gère toute la plateforme ImmoNext
  AGENCY_ADMIN  // admin d’une agence (crée des agents, gère ses annonces)
  AGENT         // simple agent au sein d’une agence
}

/// Statut d’une annonce
enum ListingStatus {
  ACTIVE
  ARCHIVED
  DRAFT
}

/// Plan d’abonnement d’une agence (SaaS)
enum AgencyPlan {
  FREE
  PRO
  ENTERPRISE
}

model Agency {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique

  country   String
  city      String

  email     String?
  phone     String?

  // Pour le SaaS
  plan      AgencyPlan @default(FREE)
  isActive  Boolean    @default(true)
  website   String?
  logoUrl   String?

  users     User[]
  listings  Listing[]

  createdAt DateTime  @default(now())
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String?
  passwordHash String
  role         UserRole  @default(AGENT)

  // Actif ou désactivé (suspension du compte)
  isActive    Boolean   @default(true)
  lastLoginAt DateTime?

  agency   Agency? @relation(fields: [agencyId], references: [id])
  agencyId String?

  createdAt DateTime @default(now())
}

model Listing {
  id          String         @id @default(cuid())
  title       String
  description String?
  city        String
  country     String
  price       Int
  currency    String         @default("EUR")
  status      ListingStatus  @default(ACTIVE)
  type        String         // "vente", "location", "terrain", etc.

  agency   Agency  @relation(fields: [agencyId], references: [id])
  agencyId String

  images    ListingImage[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ListingImage {
  id        String   @id @default(cuid())
  url       String
  position  Int      @default(0)

  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String
}
